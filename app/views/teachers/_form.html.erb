<%= form_for @teacher, :html => {:class => "form-horizontal teacher"} do |f| %>

    <% if @teacher.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @teacher.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>


    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    teachers_path, :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
